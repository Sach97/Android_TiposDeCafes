<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="#F44336"
        android:text="Tipo de Cafe?"
        android:textColor="#ffffff"
        android:textStyle="bold"/>
    <RadioGroup
        android:id="@+id/radioGroupCoffeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RadioButton
            android:id="@+id/cafeDescafeinado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Descafeinado"/>

        <RadioButton
            android:id="@+id/cafeExpresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Expresso"/>

        <RadioButton
            android:id="@+id/cafeSolidario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Solidario"/>
        
    </RadioGroup>

    <TextView
        android:id="@+id/labelCoffee"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:text="Extras ?"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/checkCrema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crema de Leche"
        android:textStyle="bold">
    </CheckBox>

    <CheckBox
        android:id="@+id/checkAzucar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crema de Azucar"
        android:textStyle="bold">
    </CheckBox>

    <LinearLayout
        android:id="@+id/Buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonPagar"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:onClick="pagar"
            android:text="Pagar"
            android:textStyle="bold"
            android:background="#FFEBEE">
        </Button>

        <Button
            android:id="@+id/buttonBuscar"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textStyle="bold"
            android:background="#FFEBEE">
        </Button>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xlmns="http://schemas.android.com/apk/com.example.sacha.tiposdecafes"
    xlmns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".NewActivity">

    <TextView
        android:id="@+id/textViewNew"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEXTO INICIAL"/>

    <LinearLayout
        android:id="@+id/Buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonAcceptar"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:onClick="acceptar"
            android:text="Acceptar"
            android:textStyle="bold"
            android:background="#FFEBEE">
        </Button>

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:onClick="cancelar"
            android:textStyle="bold"
            android:background="#FFEBEE">
        </Button>
    </LinearLayout>


</LinearLayout>